{
	"name": "QuickTiles",
	"manifest_version": 2,
	"version": "3.0",
	"description": "Quick Tiles for New Tab",
	"chrome_url_overrides": {
		"newtab": "NewTab.html"
	},
	"browser_action": {
		"default_icon": {
			"16": "images/newTab-50.png",
			"32": "images/newTab-50.png",
			"48": "images/newTab-100.png",
			"128": "images/newTab-500.png"
		}
	},
	"background": {
		"scripts": [
			"background.js"
		],
		"persistent": true
	},
	"permissions": [
		"https://*/*",
		"http://*/*",
		"tabs",
		"bookmarks",
		"storage"
	],
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"content.js"
			]
		}
	],
	"web_accessible_resources": [
		"*.json"
	]
}